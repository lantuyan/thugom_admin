<div class="page-body-wrapper">
    {{>header}}
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-sm-12">
                    <div class="home-tab">
                        <div class="card card-rounded">
                            <div class="card-body">
                                <div class="d-sm-flex justify-content-between align-items-start">
                                    <div>
                                        <h4 class="card-title card-title-dash ">Yêu cầu</h4>
                                    </div>
                                </div>
                                <div class="table-responsive  mt-3">
                                    <table id="example" class="table table-striped table-bordered table-hover"
                                        style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Ngày yêu cầu</th>
                                                <th>Số điện thoại</th>
                                                <th>Địa chỉ</th>
                                                <th>Mô tả</th>
                                                <th>Trạng thái</th>
                                                <th>Loại rác</th>
                                                <th>Giá</th>
                                                <th>Khối lượng</th>
                                                <th>Hoạt động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each requestData}}
                                            <tr>
                                                <td>{{createAt}}</td>
                                                <td>{{phonenumber }}</td>
                                                <td>{{address }}</td>
                                                <td>{{description }}</td>
                                                <td>{{status}}</td>
                                                <td>{{trashtype}}</td>
                                                <td>{{price}}</td>
                                                <td>{{amount}}</td>
                                                <td class="align-middle">
                                                    <button class="btn btn-success btn-icon p-2" id="confirmingBtn"
                                                        data-id="{{ id }}"><i class="mdi mdi-checkbox-marked-outline"></i></button>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        new DataTable('#example');
        // Bắt sự kiện click trên nút xóa
        $(document).on('click', '#confirmingBtn', function () {
            const id = $(this).data('id');
            // Sử dụng SweetAlert để hiển thị cửa sổ xác nhận
            swal({
                title: "Xác nhận yêu cầu này?",
                text: "Sau khi xác nhận, không thể hoàn tác lại được!",
                icon: "warning",
                buttons: [true, "Xác nhận"],
            }).then((confirmed) => {
                if (confirmed) {
                    $.ajax({
                        type: 'GET',
                        url: '/requests/confirming/' + id,
                        success: function (response) {
                            console.log(response);
                            // Xử lý thành công, có thể làm gì đó nếu cần thiết
                            swal("Thành công!", "Xác nhận yêu cầu thành công.", "success").then(() => {
                                window.location.href = "/requests/confirming";
                            });
                        },
                        error: function (xhr, status, error) {
                            // Xử lý lỗi khác
                            swal("Lỗi! Đã có lỗi xảy ra!", {
                                text: xhr.responseText,
                                icon: "error",
                            });
                        }
                    });
                }
            });
        });
    });
</script>