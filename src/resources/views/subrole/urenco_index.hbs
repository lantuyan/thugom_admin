<div class="page-body-wrapper">
{{>header}}
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="card card-rounded">
                        <div class="card-body">
                            <div class="d-sm-flex justify-content-between align-items-start">
                                <div>
                                    <h4 class="card-title card-title-dash ">Urenco</h4>
                                </div>
                            </div>
                            <div class="table-responsive  mt-3">
                                <table id="example" class="table table-striped table-bordered table-hover"
                                    style="width:100%">
                                    <thead>
                                        <tr>
                                            
                                            <th>Email</th>
                                            <th>Số điện thoại</th>
                                            <th>Zalo</th>
                                            <th>Địa chỉ</th>
                                            <th>Vai trò chính</th>
                                            <th>Vai trò phụ</th>
                                            <th>Hoạt động</th> 
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each urencoData}}
                                        <tr>
                                            
                                            <td>{{email }}</td>
                                            <td>{{phonenumber }}</td>
                                            <td>{{zalonumber }}</td>
                                            <td>{{address}}</td>
                                            <td>{{role }}</td>
                                            <td>{{subrole }}</td>
                                            
                                            <td>      
                                                <a href="/collectors/{{id}}" class="btn btn-primary btn-sm" title="Edit user" onclick="return"><i class="bi bi-pencil"></i> </a>                             
                                                <a href="/collectors/delete/{{id}}" class="btn btn-danger btn-sm" title="Delete " onclick="return confirm('Are you sure you want to delete this user?')"><i class="bi bi-trash"></i> </a>
                                            </td>
                                            
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>

<script>
    $(document).ready(function () {
        new DataTable('#example');
    });
</script>