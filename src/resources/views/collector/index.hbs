<div class="page-body-wrapper">
{{>header}}
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="card card-rounded">
                        <div class="card-body">
                            <div class="d-sm-flex justify-content-between align-items-start">
                                <div>
                                    <h4 class="card-title card-title-dash ">Người thu mua</h4>
                                </div>
                                <div>
                                    <a href="/collectors/create" class="btn btn-success align-self-center" role="button" >Thêm người thu mua</a>
                                </div>
                            </div>
                            <div class="table-responsive  mt-3">
                                <table id="example" class="table table-striped table-bordered table-hover"
                                    style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Ảnh đại diện</th>
                                            <th>Email</th>
                                            <th>Số điện thoại</th>
                                            <th>Zalo</th>
                                            <th>Địa chỉ</th>
                                            <th>Vai trò chính</th>
                                            <th>Hoạt động</th> <!-- Thêm cột Action -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each collectorData}}
                                        <tr>
                                            <td><img src="{{avatar}}" class="feedback-image" data-link="{{avatar}} "></td>
                                            <td>{{email }}</td>
                                            <td>{{phonenumber }}</td>
                                            <td>{{zalonumber }}</td>
                                            <td>{{address}}</td>
                                            <td>{{role }}</td>
                        
                                            <td>
                                         
                                                <a href="/collectors/{{id}}" class="btn btn-primary btn-sm" title="Edit user" onclick="return"><i class="bi bi-pencil"></i> </a>
                                                <a href="/collectors/delete/{{id}}" class="btn btn-danger btn-sm" title="Delete user" onclick="return confirm('Are you sure you want to delete this user?')"><i class="bi bi-trash"></i> </a>
                                                <a href="/collectors/blacklist/{{id}}" class="btn btn-secondary btn-sm" title="Ban user" onclick="return confirm('Are you sure you want to ban this user?')"><i class="bi bi-person-x"></i> </a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>

<script>
    $(document).ready(function () {
        new DataTable('#example');

        // Xử lý sự kiện click cho các ảnh
            $('.table-responsive').on('click', '.feedback-image', function() {
                var link = $(this).data('link');
                window.open(link, '_blank');
            });

    });
</script>