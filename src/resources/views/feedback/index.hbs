<div class="page-body-wrapper">
{{>header}}
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-sm-12">
                <div class="home-tab">
                    <div class="card card-rounded">
                        <div class="card-body">
                            <div class="d-sm-flex justify-content-between align-items-start">
                                <div>
                                    <h4 class="card-title card-title-dash ">Feedback</h4>
                                </div>
                            </div>
                            <div class="table-responsive  mt-3">
                                <table id="example" class="table table-striped table-bordered table-hover"
                                    style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Phone Number</th>
                                            <th>Address</th>
                                            <th>Image</th>
                                            <th>Description</th>
                                            <th>Create At</th>
                                            <th>Action</th> <!-- Thêm cột Action -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each feedbackData}}
                                        <tr>
                                            <td>{{phonenumber }}</td>
                                            <td>{{address }}</td>
                                            <td><img src="{{image}}" alt="Feedback Image" class="feedback-image" style="max-width: 100px;"></td>
                                            <td>{{description }}</td>
                                            <td>{{createAt}}</td>
                                            <td>                                    
                                                <a href="/requests/delete/{{id}}" class="btn btn-danger btn-sm" title="Delete user" onclick="return confirm('Are you sure you want to delete this user?')"><i class="bi bi-person-x"></i> Delete</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>

<script>
    $(document).ready(function () {
        new DataTable('#example');

        // Xử lý sự kiện click cho các ảnh
        $('.feedback-image').click(function() {
            $(this).toggleClass('enlarged'); // Thêm hoặc xóa lớp 'enlarged'
        });
    });
</script>

<style>
    .enlarged {
        max-width: none !important; /* Bỏ giới hạn kích thước */
        width: auto;
        height: auto;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
        z-index: 9999;
        background-color: rgba(0,0,0,0.8);
    }

    .enlarged img {
        max-width: 90%; /* Giữ kích thước tối đa */
        max-height: 90%;
        display: block;
        margin: auto;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
</style>